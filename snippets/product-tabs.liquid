<div class="panel-group panel-group--style1 {% if settings.color_ppage_accordion_content_bg_yes %}panel-body-bg{% endif %} prd-block_accordion" id="productAccordion">
    {%- for block in section.blocks -%}
        {%- if block.settings.enable -%}
            {%- if  block.type == 'tab_description' -%}
                {%- assign product_description = product.description -%}
                {%- if product_description == blank %}{% continue %}{% endif -%}
            {%- endif -%}
            {%- if  block.type == 'tab_metafield' -%}
                {%- assign tab_metafield = product.metafields.c_f[block.settings.title] -%}
                {%- if tab_metafield == blank %}{% continue %}{% endif -%}
            {%- endif -%}
            <div class="panel">
                <div class="panel-heading {% if block.type == 'tab_description' and block.settings.open_yes %}active{% endif %}">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#productAccordion" href="#collapse{{ block.id }}">
                            {%- if  block.type == 'tab_page' -%}
                                {{ pages[block.settings.page].title }}
                            {%- elsif  block.type == 'tab_metafield' -%}
                                {%- assign tab_metafield = product.metafields.c_f[block.settings.title] -%}
                                {%- if tab_metafield != blank -%}
                                    {{ tab_metafield }}
                                {%- endif -%}
                            {%- else -%}
                                {{ block.settings.title }}
                            {%- endif -%}
                        </a>
                        <div class="toggle-arrow"><span></span><span></span></div>
                    </h4>
                </div>

                <div id="collapse{{ block.id }}" class="panel-collapse collapse {% if block.type == 'tab_description' and block.settings.open_yes %}show{% endif %}">
                    <div class="panel-body">
                        {%- case block.type  -%}
                            {%- when 'tab_description' -%}
                                {%- assign product_description = product.description -%}
                                {{ product_description }}
                            {%- when 'tab_page' -%}
                                {{ pages[block.settings.page].content }}
                            {%- when 'tab_tags' -%}
                                <ul class="tags-list">
                                    {%- for tag in product.tags -%}
                                        <li><a href="/collections/all/{{ tag | handle }}">{{ tag }}</a></li>
                                    {%- endfor -%}
                                </ul>
                            {%- when 'tab_reviews' -%}
                                <div id="productReviews">{% include 'reviews-shortcode' %}</div>
                            {%- when 'tab_metafield' -%}
                                {%- assign tab_metafield = product.metafields.c_f[block.settings.title] -%}
                                {%- if tab_metafield != blank -%}
                                    {%- assign x = block.settings.title | replace:'title','content' -%}
                                    {%- assign x_content = product.metafields.c_f[x] -%}
                                    {{ x_content }}
                                {%- endif -%}
                        {%- endcase -%}
                    </div>
                </div>
            </div>
        {%- endif -%}
    {%- endfor -%}
</div>