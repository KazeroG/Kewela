<ul class="mega-navigation">
  {% for link in link.links %}
    <li class="mega-navigation__list {% if forloop.last != true %}mega-navigation__list--border{% endif %}">
      <!--Weeemarket Start-->
      <h4 class="mega-navigation__list-heading"><a href="{{ link.url }}">{{ link.title }}</a></h4>
      
      <a style="display : none" class="navigationImageLink" href="{{ link.url }}">
        <div class="navigationImageDiv"></div>
      </a>
      
      <!--Weeemarket End-->
      {% render 'navmenu' with
        menu: link.handle
      %}
    </li>
  {% endfor %}

  {% for block in blocks %}
    {% assign b = block.settings %}

    {% assign meganav_trigger = b.dropdown_parent_link | handle | strip %}
    {% if link.handle == meganav_trigger %}
      {% if b.mega_nav_featured_image != blank or b.featured_image_heading != blank %}
      <div class="mega-navigation__featured">
        <div class="mega-navigation__featured-wrapper">
          {% render 'responsive-image' with
            image: b.mega_nav_featured_image,
            max_width: 600
          %}
          {% if b.featured_image_heading != blank or b.featured_image_link_text != blank %}
            <div class="mega-navigation__featured-content">
              {% if b.featured_image_heading != blank %}
                <h6 class="mega-navigation__featured-heading type-body-small">{{ b.featured_image_heading }}</h6>
              {% endif %}
              {% if b.featured_image_link_text != blank %}
                <a class="mega-navigation__featured-link type-body-small" href="{{ b.featured_image_link }}">{{ b.featured_image_link_text }} &rarr;</a>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
      {% endif %}
    {% endif %}
  {% endfor %}
</ul>

<!--Weeemarket Start-->
<script>
	let megaMenus = document.querySelectorAll(".mega-navigation")[0];
  	let subMenus = megaMenus.children;
  	let imagesUrl = [
      					"https://cdn.shopify.com/s/files/1/0075/5227/0402/files/placeholder.png?v=1617364347",
                    	"https://cdn.shopify.com/s/files/1/0075/5227/0402/files/placeholder.png?v=1617364347",
      					"https://cdn.shopify.com/s/files/1/0075/5227/0402/files/placeholder.png?v=1617364347"
    				];
  	
    for(let i = 0; i < subMenus.length; i++){
  		let childs = subMenus[i].children;
      	//remove heading
      	childs[0].style.display = "none";
      	//add image
      	childs[1].style.display = "inline-block";
      	let imageDiv = childs[1].children;
      	console.log(imageDiv[0]);
      	imageDiv[0].style.backgroundImage = "url('" + imagesUrl[i] + "')";
    }
</script>
<!--Weeemarket End-->

