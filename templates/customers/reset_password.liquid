<div class="holder">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-9 col-xl-6">
                <div class="page-title title-wrap text-center">
                    <h1 class="h1-style">{{ 'customer.reset_password.title' | t }}</h1>
                    <p class="text-center">{{ 'customer.reset_password.subtext' | t: email: email }}</p>
                </div>
                {% form 'reset_customer_password' %}
                {%- if form.errors -%}
                    <div class="form-message form-message--error text-danger">
                        {{ form.errors | default_errors }}
                    </div>
                {%- endif -%}
                <div class="form-group">
                    <label for="ResetPassword">{{ 'customer.reset_password.password' | t }}</label>
                    <input type="password" value="" name="customer[password]" id="ResetPassword" class="form-control form-control--sm {% if form.errors contains 'password' %} is-invalid{% endif %}">
                </div>
                <div class="form-group">
                    <label for="PasswordConfirmation">{{ 'customer.reset_password.password_confirm' | t }}</label>
                    <input type="password" value="" name="customer[password_confirmation]" id="PasswordConfirmation" class="form-control form-control--sm {% if form.errors contains 'password_confirmation' %} is-invalid{% endif %}">
                 </div>
                <div class="text-center mt-3">
                <input type="submit" class="btn text-center" value="{{ 'customer.reset_password.submit' | t }}">
                </div>
                {% endform %}
            </div>
        </div>
    </div>
</div>
