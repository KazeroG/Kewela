<div class="page-content">
    <div class="holder">
        <div class="container">
            <div class="row vert-margin justify-content-center">
                <div class="col-md-9 col-lg-8">
                    <div class="form-message form-message--success d-none" id="ResetSuccess" tabindex="-1">
                        {{ 'customer.recover_password.success' | t }}
                    </div>
                    <div id="CustomerLoginForm" class="form-vertical">
                        <div class="page-title title-wrap text-center mb-sm-3 mt-3">
                            <h1 id="LoginHeading" class="h1-style">{{ 'customer.login.title' | t }}</h1>
                        </div>
                        <p class="p-sub text-center mb-3">{{ 'theme.general.customer_desc' | t }}</p>
                        {% form 'customer_login', novalidate: 'novalidate' %}
                        {% include 'form-status', form_id: formId %}
                        <div class="form-group">
                        <label for="CustomerEmail">{{ 'customer.login.email' | t }}</label>
                        <input class="form-control form-control--sm {% if form.errors contains 'form' %} is-invalid{% endif %}"
                               type="email"
                               name="customer[email]"
                               id="CustomerEmail"
                               autocomplete="email"
                               autocorrect="off"
                               autocapitalize="off"
                        >
                        </div>
                        {% if form.password_needed %}
                        <div class="form-group">
                            <label for="CustomerPassword">{{ 'customer.login.password' | t }}</label>
                            <input class="form-control form-control--sm {% if form.errors contains 'form' %} is-invalid{% endif %}"
                                   type="password"
                                   value=""
                                   name="customer[password]"
                                   id="CustomerPassword"
                        >
                        </div>
                        {% endif %}
                        <div class="text-center">
                            <div class="row align-items-center mt-3">
                                <div class="col-auto">
                                    <input type="submit" class="btn min-w-160" value="{{ 'customer.login.sign_in' | t }}">
                                </div>
                                <div class="col">
                                    {% if form.password_needed %}
                                      <a href="#recover" id="RecoverPassword" onclick="showRecoverPasswordForm();return false;" class="fw-500">{{ 'customer.login.forgot_password' | t }}</a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        {% endform %}
                    </div>
                    <div id="RecoverPasswordForm" style="display: none;">
                        <div class="page-title title-wrap text-center mb-sm-3 mt-3">
                            <h2 id="RecoverHeading" class="h1-style">{{ 'customer.recover_password.title' | t }}</h2>
                        </div>
                        <p class="p-sub text-center mb-3">{{ 'customer.recover_password.subtext' | t }}</p>
                        <div class="form-wrap">
                            {% form 'recover_customer_password' %}
                            {% if form.posted_successfully? %}
                                <span class="hide reset-password-success"></span>
                            {% endif %}
                            <div class="form-group">
                            <label for="RecoverEmail">{{ 'customer.recover_password.email' | t }}</label>
                            <input class="form-control form-control--sm"
                                   type="email"
                                   value=""
                                   name="email"
                                   id="RecoverEmail"
                                   class="input-full{% if form.errors %} input--error{% endif %}"
                                   autocorrect="off"
                                   autocapitalize="off"
                            >
                                {%- if form.errors -%}
                                    <div class="invalid-feedback">{{ form.errors.messages['form'] | capitalize }} {{ form.errors.messages['form'] }}.</div>
                                {%- endif -%}
                            </div>
                            <div class="row mt-3">
                                <div class="col-auto"><input type="submit" class="btn" value="{{ 'customer.recover_password.submit' | t }}"></div>
                                <div class="col-auto"><a href="#LoginHeading" id="HideRecoverPasswordLink" class="btn btn--grey" onclick="hideRecoverPasswordForm();return false;">{{ 'customer.recover_password.cancel' | t }}</a></div>
                            </div>
                            {% endform %}
                        </div>
                    </div>
                    {% if shop.checkout.guest_login %}
                        <div class="text-center">
                            <h2>{{ 'customer.login.guest_title' | t }}</h2>
                            {% form 'guest_login' %}
                            <input type="submit" class="btn" value="{{ 'customer.login.guest_continue' | t }}">
                            {% endform %}
                        </div>
                    {% endif %}
                </div>
                <div class="d-none d-xl-block col-xl-1"></div>
                <div class="col-md-9 col-lg-8 d-flex flex-column">
                    <div class="page-title title-wrap text-center mb-sm-3 mt-3">
                        <h2 id="NewCustomerHeading" class="h1-style">{{ 'theme.general.new_customer' | t }}</h2>
                    </div>
                    <p class="mt-0">{{ 'theme.general.new_customer_desc' | t }}</p>
                    <p class="fw-500">{{ 'theme.general.new_customer_ask' | t }} <a href="/pages/contact-us" class="custom-color">{{ 'theme.general.new_customer_ask_link' | t }}</a></p>
                    <div class="mt-auto pt-3">
                    <a class="btn" href="/account/register">{{ 'layout.customer.create_account' | t }}</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
	function showRecoverPasswordForm() {
		$('#RecoverPasswordForm').show();
		$('#CustomerLoginForm').hide();
	}
	function hideRecoverPasswordForm() {
		$('#RecoverPasswordForm').hide();
		$('#CustomerLoginForm').show();
	}
	if (window.location.hash == '#recover') {
		showRecoverPasswordForm()
	}
    {% if reset_success %}
	$('#ResetSuccess').removeClass('d-none')
    {% endif %}
</script>