{%- if section.settings.enable -%}
<div class="holder {{ section.settings.outer_margin }}" id="holder-{{ section.id }}">
    <div class="container">
        {%- unless section.settings.title == '' and section.settings.subtitle == '' -%}
        {% case section.settings.title_size %}
        {% when 'h-lg-style' %}
        {%- assign title_size = 'title-lg' -%}
        {% when 'h1-style' %}
        {%- assign title_size = 'title-md' -%}
        {% else %}
        {%- assign title_size = 'title-sm' -%}
        {% endcase %}
        <div class="title-wrap {{ title_size }} text-{{ section.settings.text_alignment }}">
            {%- if section.settings.title != '' -%}<h2 class="{{ section.settings.title_size }}{% if settings.heading_sub_first %} mb-0{% endif %}">{{ section.settings.title }}</h2>{%- endif -%}
            {%- if section.settings.subtitle != '' -%}<div class="h-sub maxW-825{% if settings.heading_sub_first %} h-sub--first{% endif %}">{{ section.settings.subtitle }}</div>{%- endif -%}
        </div>
        {%- endunless -%}
        <div class="text-icn-blocks-row {% if section.settings.no_border %}text-icn-blocks-row--nodivider{% endif %} justify-content-{{ section.settings.icons_alignment }}">
            {% for block in section.blocks %}
                {% if block.settings.enable %}
                    <div class="text-icn-block-hor">
                        <div class="icn" {% if block.settings.icon_color == blank or block.settings.icon_color contains 'rgba(0,0,0,0)' %}{% unless section.settings.icons_color == '' or section.settings.icons_color contains 'rgba(0,0,0,0)' %}style="color: {{ section.settings.icons_color }}"{% endunless %}{% else %}style="color: {{ block.settings.icon_color }}"{% endif %}>
                            {% if block.settings.icon_type == 'svg' %}
                                {{ block.settings.svg }}
                            {% else %}
                                <i class="{% if block.settings.icon_type == 'theme' %}{{ block.settings.icon }}{% else %}{{ block.settings.icon_name }}{% endif %}"></i>
                            {% endif %}
                        </div>
                        <div class="text" {% if block.settings.block_color == blank or block.settings.block_color contains 'rgba(0,0,0,0)' %}{% unless section.settings.block_color == '' or section.settings.block_color contains 'rgba(0,0,0,0)' %}style="color: {{ section.settings.block_color }}"{% endunless %}{% else %}style="color: {{ block.settings.block_color }}"{% endif %}>
                            <h4 {% if block.settings.block_color == blank or block.settings.block_color contains 'rgba(0,0,0,0)' %}{% unless section.settings.block_color == '' or section.settings.block_color contains 'rgba(0,0,0,0)' %}style="color: {{ section.settings.block_color }}"{% endunless %}{% else %}style="color: {{ block.settings.block_color }}"{% endif %}>{{ block.settings.heading }}</h4>
                            <p>{{ block.settings.text }}</p>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>
<style>
    {%- unless section.settings.block_color == '' or section.settings.block_color contains 'rgba(0,0,0,0)' -%}
    #shopify-section-{{ section.id }} .text-icn-block-hor a:not(:hover) {
        color: {{ section.settings.block_color }};
    }
    {%- endunless -%}
    {%- unless section.settings.block_link_hover == '' or section.settings.block_link_hover contains 'rgba(0,0,0,0)' -%}
    #shopify-section-{{ section.id }} .text-icn-block-hor a:hover {
        color: {{ section.settings.block_link_hover }};
    }
    {%- endunless -%}
    {%- for block in section.blocks -%}
        {%- if block.settings.enable -%}
        {%- unless block.settings.block_color == '' or block.settings.block_color contains 'rgba(0,0,0,0)' -%}
        #shopify-section-{{ section.id }} .text-icn-block-hor:nth-child({{ forloop.index }}) a:not(:hover) {
            color: {{ block.settings.block_color }}
        }
        {%- endunless -%}
        {%- unless block.settings.block_link_hover == '' or block.settings.block_link_hover contains 'rgba(0,0,0,0)' -%}
        #shopify-section-{{ section.id }} .text-icn-block-hor:nth-child({{ forloop.index }}) a:hover {
            color: {{ block.settings.block_link_hover }};
        }
        {%- endunless -%}
        {%- endif -%}
    {%- endfor -%}
 </style>
{%- endif -%}

