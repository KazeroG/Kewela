<div class="holder {{ section.settings.outer_margin }} {% if section.settings.enable_bg %}holder-with-bg {{ section.settings.padding-t }} {{ section.settings.padding-b }}  bg-cover lazyload" data-expand="-500"
     {%- if section.settings.bg_image != blank -%}data-bgset="{% include 'bgset', image: section.settings.bg_image %}" data-sizes="auto"{%- endif -%}
     {%- if section.settings.bg_color != blank and section.settings.bg_color != 'rgba(0,0,0,0)' -%}style="background-color: {{ section.settings.bg_color }}"{% endif %}
        {%- else -%}"{%- endif -%}>
<div class="{% if section.settings.block_width == "boxed" %}container{% else %}container-fluid px-0{% endif %}">
    <div class="row vert-margin-small align-items-center">
        {%- for block in section.blocks -%}
            {%- case block.type -%}
            {%- when 'banner' -%}
            {%- if block.settings.enable -%}
                <div {{ block.shopify_attributes }} class="col-{{ block.settings.col }} col-md-{{ block.settings.col_md }}">
                    {%- assign banner = block.settings -%}
                    {%- render 'banner-item', banner: banner, id: block.id, id: block.id, gutters: gutters -%}
                </div>
            {%- endif -%}
            {%- when 'text' -%}
            <div {{ block.shopify_attributes }} id="block-{{ block.id }}" class="col-{{ block.settings.col }} col-md-{{ block.settings.col_md }} col-bnr">
                {% include 'section-headings' %}
                <div class="text-{{ block.settings.text_alignment }}">
                {%- if block.settings.info != blank -%}
                    {{ block.settings.info }}
                {%- endif -%}
                {%- if block.settings.countdown_yes -%}
                    <div class="countdown-box-bg mt-3 mt-lg-4">
                        <div class="countdown js-countdown" data-countdown="{{ block.settings.timer }}"></div>
                    </div>
                {%- endif -%}
                {%- if block.settings.button_yes -%}
                    <div class="btn-wrap mt-3 mt-lg-4">
                        <a href="{{ block.settings.button_link | default:'#' }}" target="{{ section.settings.link_target }}" class="btn {{ block.settings.button_size }}">
                            {{ block.settings.button_txt }}
                        </a>
                    </div>
                {%- endif -%}
                </div>
            </div>
            {%- endcase -%}
        {%- endfor -%}
    </div>
</div>
</div>
<style>
    {%- for block in section.blocks -%}

        {%- unless block.settings.text_color == '' or block.settings.text_color contains 'rgba(0,0,0,0)' -%}
        #block-{{ block.id }} .col-bnr {
            color: {{ block.settings.text_color }};
        }
        {%- endunless -%}

        {%- if block.settings.countdown_yes -%}

            {%- if block.settings.countdown_shadow -%}
                #block-{{ block.id }} .countdown-box-bg .countdown > span:after {
                    box-shadow: 0 0 40px rgba(0,0,0,.1);
                }
            {%- endif -%}

            {%- if block.settings.countdown_style == '1' -%}
                #block-{{ block.id }} .countdown-box-bg .countdown > span:after {
                    -webkit-mask: url({{ 'brush-shape-square.svg' | asset_url }}) no-repeat 50% 50%;
                    mask: url({{ 'brush-shape-square.svg' | asset_url }}) no-repeat 50% 50%;
                    -webkit-mask-size: cover;
                    mask-size: cover;
                }
            {%- elsif block.settings.countdown_style == '3' -%}
            #block-{{ block.id }} .countdown-box-bg .countdown > span {
                padding-top: 5px;
                padding-bottom: 2px;
            }
            #block-{{ block.id }} .countdown-box-bg .countdown > span:before {
                position: absolute;
                content: '';
                z-index: -1;
                top: -5px;
                left: 0;
                width: 100%;
                {%- unless block.settings.countdown_color_bg2 == '' or block.settings.countdown_color_bg2 contains 'rgba(0,0,0,0)' -%}
                    background-color: {{ block.settings.countdown_color_bg2 }};
                {%- endunless -%}
                height: calc({{ block.settings.countdown_fontsize }}px * 1.5 + 5px);
            }
            #block-{{ block.id }} .countdown-box-bg .countdown > span span {
                margin-bottom: 12px;
                {%- unless block.settings.countdown_color2 == '' or block.settings.countdown_color2 contains 'rgba(0,0,0,0)' -%}
                    color: {{ block.settings.countdown_color2 }};
                {%- endunless -%}
            }
            {%- endif -%}
            #block-{{ block.id }}  .countdown-box-bg .countdown > span span {
                font-size: {{ block.settings.countdown_fontsize }}px;
                font-weight: {{ block.settings.countdown_fontweight }};
            }
            .has-round-btns #block-{{ block.id }} .countdown-box-bg .countdown > span:after {
                border-radius: 10px;
            }
            {%- unless block.settings.countdown_color_bg == '' or block.settings.countdown_color_bg contains 'rgba(0,0,0,0)' -%}
            #block-{{ block.id }} .countdown-box-bg .countdown > span:after {
                background-color: {{ block.settings.countdown_color_bg }};
                z-index: -2;
            }
            {%- endunless -%}

            {%- unless block.settings.countdown_color == '' or block.settings.countdown_color contains 'rgba(0,0,0,0)' -%}
            #block-{{ block.id }} .countdown-box-bg .countdown > span {
                color: {{ block.settings.countdown_color }};
            }
            {%- endunless -%}

        {%- endif -%}

    {%- if block.settings.button_yes -%}
    {%- unless block.settings.bnr_button_theme -%}
    #block-{{ block.id }} .btn:not(.hovered):not(:hover) {
    {%- if block.settings.button_bgcolor != blank and block.settings.button_bgcolor != 'rgba(0,0,0,0)' -%} background-color: {{ block.settings.button_bgcolor }};
    {%- endif -%} {%- if block.settings.button_color != blank and block.settings.button_color != 'rgba(0,0,0,0)' -%} color: {{ block.settings.button_color }};
    {%- endif -%}
    }
    {%- endunless -%}

    #block-{{ block.id }} .btn:hover {
    {%- if block.settings.button_bgcolor_hover != blank and block.settings.button_bgcolor_hover != 'rgba(0,0,0,0)' -%} background-color: {{ block.settings.button_bgcolor_hover }} !important;
    {%- endif -%} {%- if block.settings.button_color_hover != blank and block.settings.button_color_hover != 'rgba(0,0,0,0)' -%} color: {{ block.settings.button_color_hover }} !important;
    {%- endif -%}
    }
    {%- endif -%}

    {%- endfor -%}
</style>
