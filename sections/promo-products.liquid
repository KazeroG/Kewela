{% if section.settings.enable %}
    <div class="footer-sticky">
        <div class="payment-notification-wrap js-pn">
            <div class="payment-notification {% if section.settings.style == 'square' %}payment-notification--squared{% endif %}" data-expires="{{ section.settings.popup_expires }}" data-close="{{ section.settings.popup_close }}" data-visible-time="{{ section.settings.visible_time | times:1000 }}" data-hidden-time="{{ section.settings.hidden_time | times:1000 }}" data-delay="{{ section.settings.delay | times:1000 }}">
                <div class="payment-notification-inside">
                    <div class="payment-notification-container">
                        <a href="#" class="payment-notification-image js-pn-link">
                            <img src="#" class="js-pn-image">
                        </a>
                        <div class="payment-notification-content-wrapper">
                            <div class="payment-notification-content">
                                <div class="payment-notification-text">{{ 'theme.promo.someone_purchased' | t }}</div>
                                <a href="#" class="payment-notification-name js-pn-name js-pn-link" title=""></a>
                                <div class="payment-notification-when">{{ 'theme.promo.minutes_ago_before_text' | t }}<span class="js-pn-time"></span> {{ 'theme.promo.minutes_ago' | t }}</div>
                                <div class="payment-notification-from">{{ 'theme.promo.from' | t }} <span class="js-pn-from"></span></div>
                            </div>
                        </div>
                    </div>
                    <div class="payment-notification-close"><i class="icon-close-bold"></i></div>
                    <a href="" class="payment-notification-qw js-pn-link-quickview js-prd-quickview" data-fancybox><i class="icon-eye"></i></a>
                </div>
            </div>
        </div>
    </div>
    {% assign products = '[' %}
    {% for block in section.blocks %}
        {% if block.settings.enable %}
            {% assign product = all_products[block.settings.product] %}
            {% assign image = product.featured_image.src | img_url: '90x106' %}
            {% assign name = product.title | truncate: 36 | strip_html | replace:"'","\'" %}
            {% assign product_info = '{"productname":"' | append:name | append:'", "productlink":"' | append:product.url | append:'","productimage":"' | append:image | append:'"},' %}
            {% assign products = products | append:product_info %}
        {% endif %}
    {% endfor %}
    {% assign products = products | append:']' %}
    {% assign products_json = products | replace:'},]','}]' %}
    <script>
		jQuery(document).ready(function () {
			THEME.productFeatures.paymentNotification({fromArray: '{{ section.settings.promotion_cities }}', productJson: '{{ products_json }}' })
		})
    </script>
{% endif %}
