    {%- if block.settings.button_bgcolor_hover != blank and block.settings.button_bgcolor_hover != 'rgba(0,0,0,0)' -%} background-color: {{ block.settings.button_bgcolor_hover }} !important;
    {%- endif -%} {%- if block.settings.button_color_hover != blank and block.settings.button_color_hover != 'rgba(0,0,0,0)' -%} color: {{ block.settings.button_color_hover }} !important;
    {%- endif -%}
    }

    {%- endif -%}
    {%- endfor -%}

</style>
