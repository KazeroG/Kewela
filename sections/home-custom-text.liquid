                                {%- endif -%}
                                {%- if section.settings.title_inside and headings -%}
                                    {% include 'section-headings' bottom: section.settings.heading_bottom %}
                                    {%- assign headings = false -%}
                                {%- endif -%}
                                {{ block.settings.text }}
                                {%- if block.settings.button_yes -%}
                                    <div class="btn-wrap mt-3">
