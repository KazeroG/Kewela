{%- if section.settings.enable -%}
    <div class="holder {{ section.settings.outer_margin }} {{ section.settings.block_width }} {% if section.settings.block_width == 'fullwidth' %}full-nopad{% endif %}  {%- if section.settings.enable_bg -%}holder-with-bg {{ section.settings.padding-t }} {{ section.settings.padding-b }}  bg-cover lazyload"
        {% if section.settings.bg_image != blank %}data-bgset="{% include 'bgset', image: section.settings.bg_image %}" data-sizes="auto"{% endif %}
        {% if section.settings.bg_color != blank and section.settings.bg_color != 'rgba(0,0,0,0)' %}style="background-color: {{ section.settings.bg_color }}"{% endif %}
        {%- else -%}"{%- endif -%}>
    {%- assign outside = false -%}
    {%- assign icons = false -%}
    {%- assign numbers = false -%}
    {%- assign numbers2 = false -%}
    {%- assign headings = true -%}
    {%- for block in section.blocks -%}
        {%- case block.type -%}
        {%- when 'image' -%}
        {%- if block.settings.image_outside and block.settings.enable -%}{%- assign outside = true -%}{%- endif -%}
        {%- when 'numbers' -%}
        {%- if block.settings.enable -%}{%- assign numbers = true -%}{%- endif -%}
        {%- endcase -%}
    {%- endfor -%}
    <div class="{% if outside %}container-fluid px-0{% else %}container{% endif %}" {% if section.settings.block_width == 'boxed' and  section.settings.maxwidth_yes %}style="max-width:{{ section.settings.maxwidth }}px"{% endif %}>
        {%- unless section.settings.title_inside -%}
        {% include 'section-headings' %}
        {%- endunless -%}
        <div class="row justify-content-md-{{ section.settings.alignment }}">
            {%- for block in section.blocks -%}
                {%- if block.settings.enable -%}
                    {%- case block.type -%}
                    {%- when 'image' -%}
                    <div {{ block.shopify_attributes }} id="shopify-block-{{ block.id }}" class="d-flex align-items-center {% if outside %}{% if forloop.index == 1 %}justify-content-start{% else %}justify-content-end{% endif %}{% else %}justify-content-center{% endif %} {% if block.settings.image_parallax %}overflow-hidden{% endif %} col-{{ block.settings.col }} col-md-{{ block.settings.col_md }} {% if forloop.index != 1 %}mt-3 mt-md-0{% endif %} text-center bg-center-all lazyload"
                            {% if block.settings.bg_image != blank %}data-bgset="{% include 'bgset', image: block.settings.bg_image %}" data-sizes="auto"{% endif %}>
                        {%- if block.settings.image -%}
                            <img class="{% if block.settings.image_parallax %}parallaxed{% endif %} lazyload fade-up"
                                 src="{{ block.settings.image | img_url: '100x' }}"
                                 data-src="{{ block.settings.image | img_url: '800x' }}"
                                 alt="{{ block.settings.image.alt }}"/>
                        {%- else -%}
                            {%- render 'image-placeholder-aspect-ratio', width: 100, height: 50, text: 'image' -%}
                        {%- endif -%}
                    </div>
                    {%- when 'numbers' -%}
                    <div {{ block.shopify_attributes }} id="shopify-block-{{ block.id }}" class="col-{{ block.settings.col }} col-md-{{ block.settings.col_md }} {% if forloop.index != 1 %}mt-3 mt-md-0{% endif %} text-{{ block.settings.text_alignment }} {{ block.settings.text_alignment_v }} py-3">
                        {%- if outside -%}
                        <div class="d-flex {% if forloop.index == 1 %}justify-content-end{% endif %}">
                            <div class="outside-text">
                                {%- endif -%}
                                {%- if section.settings.title_inside and headings -%}
                                    {% include 'section-headings' %}
                                    {%- assign headings = false -%}
                                {%- endif -%}
                                {%- if block.settings.text != blank -%}
                                    {{ block.settings.text }}
                                {%- endif -%}
                                <div class="row custom-text-number-row vert-margin-small {% if block.settings.text != blank %}pt-2{% endif %}">
                                    {%- for i in (1..4) -%}
                                        {% capture enable %}enable_{{ i }}{% endcapture %}
                                        {% capture text1 %}text1_{{ i }}{% endcapture %}
                                        {% capture text2 %}text2_{{ i }}{% endcapture %}
                                        {% if block.settings[enable] %}
                                            <div class="col-auto">
                                                <div class="custom-text-number">
                                                    <div class="custom-text-number-num">{{ block.settings[text1] }}</div>
                                                    <div class="custom-text-number-text">
                                                        {{ block.settings[text2] }}
                                                    </div>
                                                </div>
                                            </div>
                                        {%- endif -%}
                                    {%- endfor -%}
                                </div>
                                {%- if outside -%}
                            </div>
                        </div>
                        {%- endif -%}
                    </div>
                    {%- endcase -%}
                {%- endif -%}
            {%- endfor -%}
        </div>
    </div>
    </div>
{%- endif -%}

<style>
    {%- if numbers -%}
    .custom-text-number-row {
        justify-content: center;
        margin-left: -20px;
        margin-right: -20px;
    }
    .custom-text-number-row > * {
        padding-left: 20px;
        padding-right: 20px;
    }
    .custom-text-number {
        text-align: center;
        max-width: 190px;
        margin: 0 auto;
    }

    .custom-text-number-num {
        margin-bottom: 10px;
        font-size: 84px;
        line-height: 1em;
    }

    .custom-text-number-num span {
        font-size: 36px;
        line-height: 1em;
    }

    .custom-text-number-text {
        padding: 12px 15px;
        color: #fff;
        background-color: #282828;
        font-size: 16px;
        line-height: 1em;
    }
    @media (max-width: 767px) {
        .custom-text-number-text {
            padding: 8px 10px;
            font-size: 14px;
            line-height: 1em;
        }
    }
    {%- endif -%}

    {%- for block in section.blocks -%}
    {%- unless block.settings.color == '' or block.settings.color contains 'rgba(0,0,0,0)' -%}
    #shopify-block-{{ block.id }}, #shopify-block-{{ block.id }} h2, #shopify-block-{{ block.id }} h3, #shopify-block-{{ block.id }} p, #shopify-block-{{ block.id }} a, #shopify-block-{{ block.id }} a:hover {
        color: {{ block.settings.color }};
    }
    {%- endunless -%}
    {%- unless block.settings.title_color == '' or block.settings.title_color contains 'rgba(0,0,0,0)' -%}
    #shopify-block-{{ block.id }} h2, #shopify-block-{{ block.id }} h3 {
        color: {{ block.settings.title_color }};
    }
    {%- endunless -%}
    {%- case block.type -%}
    {%- when 'numbers' -%}
    {%- unless block.settings.num_color == '' or block.settings.num_color contains 'rgba(0,0,0,0)' -%}
    #shopify-block-{{ block.id }} .custom-text-number-num {
        color: {{ block.settings.num_color }};
    }
    {%- endunless -%}
    {%- unless block.settings.text_color == '' or block.settings.text_color contains 'rgba(0,0,0,0)' -%}
    #shopify-block-{{ block.id }} .custom-text-number-text {
        color: {{ block.settings.text_color }};
    }
    {%- endunless -%}
    {%- unless block.settings.bg_color == '' or block.settings.bg_color contains 'rgba(0,0,0,0)' -%}
    #shopify-block-{{ block.id }} .custom-text-number-text {
        background-color: {{ block.settings.bg_color }};
    }
    {%- endunless -%}
    {%- endcase -%}
    {%- endfor -%}

    @media (min-width: 768px) {
    {%- if outside -%}
    {%- for block in section.blocks -%}
        #shopify-block-{{ block.id }} .outside-text {
            max-width: {{ settings.maxwidth | divided_by: 18 | times: block.settings.col_md | minus: 26 }}px;
        }

    {%- endfor -%}
    {%- endif -%}
    {%- for block in section.blocks -%}
    {%- case block.type -%}
    {%- when 'image' -%}
    {%- if block.settings.margin_top != 0 or block.settings.margin_bottom != 0 -%}
        #shopify-block-{{ block.id }} img {
            margin-top: -{{ block.settings.margin_top }}%;
            margin-bottom: -{{ block.settings.margin_bottom }}%;
            z-index: 1;
        }

    {%- endif -%}
    {%- endcase -%}
    {%- endfor -%}
    }
</style>
