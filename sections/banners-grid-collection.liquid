{%- assign section_enable = false -%}
{%- for block in section.blocks -%}
    {%- if block.settings.enable -%}
        {%- if block.settings.enable_all -%}
            {%- assign section_enable = true -%}
        {%- else -%}
            {%- assign collection1 = collections[block.settings.collection_1] -%}
            {%- assign collection2 = collections[block.settings.collection_2] -%}
            {%- assign collection3 = collections[block.settings.collection_3] -%}
            {%- assign collection4 = collections[block.settings.collection_4] -%}
            {%- assign collection5 = collections[block.settings.collection_5] -%}
            {%- if collection.handle contains collection1.handle and collection1.handle != blank -%}{%- assign section_enable = true -%}
                {%- elsif collection.handle contains collection2.handle and collection2.handle != blank -%}{%- assign section_enable = true -%}
                {%- elsif collection.handle contains collection3.handle and collection3.handle != blank -%}{%- assign section_enable = true -%}
                {%- elsif collection.handle contains collection4.handle and collection4.handle != blank -%}{%- assign section_enable = true -%}
                {%- elsif collection.handle contains collection5.handle and collection5.handle != blank -%}{%- assign section_enable = true -%}
            {%- endif -%}
        {%- endif -%}
    {%- endif -%}
{%- endfor -%}

{%- if section_enable -%}
    {%- if section.settings.enable -%}
        <div class="holder {{ section.settings.outer_margin }} {% if section.settings.enable_bg %}holder-with-bg {{ section.settings.padding-t }} {{ section.settings.padding-b }}  bg-cover lazyload" data-expand="-500"
{%- if section.settings.bg_image != blank -%}data-bgset="{% include 'bgset', image: section.settings.bg_image %}" data-sizes="auto"{%- endif -%}
{%- if section.settings.bg_color != blank and section.settings.bg_color != 'rgba(0,0,0,0)' -%}style="background-color: {{ section.settings.bg_color }}"{% endif %}
{%- else -%}"{%- endif -%}>
        <div class="{% if section.settings.block_width == "boxed" %}container{% else %}container-fluid px-0{% endif %}">
            <div class="row bnr-grid {% if section.settings.nopads %}no-gutters{% else %}vert-margin-small{% endif %}">
                {%- if section.settings.nopads -%}{% assign gutters = 0.1 %}{%- else -%}{% assign gutters = 0.3 %}{%- endif -%}
                {%- for block in section.blocks -%}
                    {%- if block.settings.enable -%}
                        {%- if block.settings.enable_all -%}
                            {%- assign show = true -%}
                        {%- else -%}
                            {%- assign collection1 = collections[block.settings.collection_1] -%}
                            {%- assign collection2 = collections[block.settings.collection_2] -%}
                            {%- assign collection3 = collections[block.settings.collection_3] -%}
                            {%- assign collection4 = collections[block.settings.collection_4] -%}
                            {%- assign collection5 = collections[block.settings.collection_5] -%}
                            {%- assign show = false -%}
                            {%- if collection.handle contains collection1.handle and  collection1.handle != blank -%}{%- assign show = true -%}
                                {%- elsif collection.handle contains collection2.handle and  collection2.handle != blank -%}{%- assign show = true -%}
                                {%- elsif collection.handle contains collection3.handle and  collection3.handle != blank -%}{%- assign show = true -%}
                                {%- elsif collection.handle contains collection4.handle and  collection4.handle != blank -%}{%- assign show = true -%}
                                {%- elsif collection.handle contains collection5.handle and  collection5.handle != blank -%}{%- assign show = true -%}
                            {%- endif -%}
                        {%- endif -%}
                        {%- if show -%}
                            <div id="block-{{ block.id }}" {{ block.shopify_attributes }} class="col-{{ block.settings.col }} col-sm-{{ block.settings.col_md }}">
                                {%- assign banner = block.settings -%}
                                {%- render 'banner-item', banner: banner, id: block.id, gutters: gutters -%}
                            </div>
                        {%- endif -%}
                    {%- endif -%}
                {%- endfor -%}
            </div>
        </div>
        </div>
    {%- endif -%}
    <style>
        {%- for block in section.blocks -%}
        {%- if block.settings.scale_m != 100 -%}
        @media (max-width: 575px) {
            #block-{{ block.id }} .bnr-caption {
                transform: scale({{ block.settings.scale_m | times: 0.01 }});
            }
        }
        {%- endif -%}
        {%- endfor -%}
    </style>
