{%- if section.settings.enable -%}
    <div class="holder {{ section.settings.outer_margin }} {{ section.settings.block_width }} {% if section.settings.block_width == 'fullwidth' %}full-nopad{% endif %}  {%- if section.settings.enable_bg -%}holder-with-bg {{ section.settings.padding-t }} {{ section.settings.padding-b }}  bg-cover lazyload"
        {% if section.settings.bg_image != blank %}data-bgset="{% include 'bgset', image: section.settings.bg_image %}" data-sizes="auto"{% endif %}
        {% if section.settings.bg_color != blank and section.settings.bg_color != 'rgba(0,0,0,0)' %}style="background-color: {{ section.settings.bg_color }}"{% endif %}
        {%- else -%}"{%- endif -%}>
    <div class="container">
        {% include 'section-headings' %}
        <div class="simple-slideshow data-slick arrows-aside-simple" data-slick='{"slidesToShow": 1, "dots": true, "arrows": false, "fade": true}'>
            {%- for block in section.blocks -%}
                {%- if block.settings.enable -%}
                    <div class="simple-slideshow-item" id="shopify-block-{{ block.id }}" {{ block.shopify_attributes }}>
                        <div class="row no-gutters">
                            <div class="col-md-10 col-lg-12">
                                {%- assign _img = block.settings.image -%}
                                {%- if _img -%}
                                    {%- assign aspect_ratio = 1 | divided_by: _img.aspect_ratio -%}
                                    {%- assign img_url = _img | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                                    <div class="h-100">
                                        <img class="lazyload fade-up"
                                             data-src="{{ img_url }}"
                                             data-widths="[1090, 1296, 1512, 1728, 2048]"
                                             data-sizes="auto"
                                             alt="">
                                    </div>
                                {%- else -%}
                                    <div class="gallery-item-image">
                                        {% include 'image-placeholder-aspect-ratio', width: '800', height: '530' %}
                                    </div>
                                {%- endif -%}
                            </div>
                            <div class="col-md-8 col-lg-6">
                                <div class="simple-slideshow-text h-100">
                                    <h2 class="simple-slideshow-text-title">{{ block.settings.title }}</h2>
                                    {{ block.settings.text }}
                                    {%- if block.settings.button_yes -%}
                                        <div class="btn-wrap mt-3 mt-lg-4">
                                            <a href="{{ block.settings.button_link | default:'#' }}" target="{{ section.settings.link_target }}" class="btn {{ block.settings.button_size }}">
                                                {{ block.settings.button_txt }}
                                            </a>
                                        </div>
                                    {%- endif -%}
                                </div>
                            </div>
                        </div>
                    </div>
                {%- endif -%}
            {%- endfor -%}
        </div>
        <div class="carousel-arrows mt-3 mt-lg-5 d-flex justify-content-center"></div>
    </div>
    </div>
    <style>
        .simple-slideshow .slick-list {
            overflow: visible;
        }

        @media (min-width: 992px) {
            .simple-slideshow .slick-dots {
                right: 0;
                left: auto;
                width: 30%;
            }

            body.rtl .simple-slideshow .slick-dots {
                right: auto;
                left: 0;
            }
        }

        @media (max-width: 991px) {
            .simple-slideshow .slick-dots {
                right: 0;
                left: 0;
                width: 100%;
            }
        }

        .simple-slideshow-text {
            font-size: 16px;
            line-height: 1.8em;
            position: relative;
            z-index: 1;
            display: flex;
            flex-direction: column;
            width: 100%;
            margin-bottom: 30px;
            padding: 30px 50px 30px 70px;
            background-color: #fff;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, .3);
            justify-content: center;
        }

        @media (max-width: 1599px) {
            .simple-slideshow-text {
                padding: 30px 45px;
            }
        }

        .simple-slideshow-text-title {
            font-size: 39px;
            font-weight: 800;
            line-height: 1.179em;
        }

        @media (max-width: 991px) {
            .simple-slideshow-text-title {
                font-size: 30px;
            }
        }

        .simple-slideshow-text p:first-of-type {
            margin-top: 0;
        }

        .simple-slideshow-text:before,
        .simple-slideshow-text:after {
            position: absolute;
            width: 100%;
            height: 100%;
            content: '';
            transition: transform .25s ease;
            background-color: #fff;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, .3);
        }

        .simple-slideshow-text:before {
            z-index: -1;
            top: 0;
            left: 0;
            transform: rotate(-2deg);
        }

        .simple-slideshow-text:after {
            z-index: -2;
            top: 1px;
            left: -2px;
            transform: rotate(2deg);
        }

        .simple-slideshow-text:hover:before {
            transform: rotate(3deg);
        }

        .simple-slideshow-text:hover:after {
            transform: rotate(-3deg);
        }

        .simple-slideshow-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        {%- for block in section.blocks -%}
        {%- if block.settings.button_yes -%}
        {%- unless block.settings.bnr_button_theme -%}
        #shopify-section-{{ section.id }} [data-slick-index = "{{ forloop.index | minus:1 }}"] .btn:not(.hovered):not(:hover) {
        {%- if block.settings.button_bg != blank and block.settings.button_bg != 'rgba(0,0,0,0)' -%} background-color: {{ block.settings.button_bg }};
        {%- endif -%} {%- if block.settings.button_color != blank and block.settings.button_color != 'rgba(0,0,0,0)' -%} color: {{ block.settings.button_color }};
        {%- endif -%}
        }

        {%- endunless -%}
        #shopify-section-{{ section.id }} [data-slick-index = "{{ forloop.index | minus:1 }}"] .btn:hover {
        {%- if block.settings.button_hover_bg != blank and block.settings.button_hover_bg != 'rgba(0,0,0,0)' -%} background-color: {{ block.settings.button_hover_bg }} !important;
        {%- endif -%} {%- if block.settings.button_hover_color != blank and block.settings.button_hover_color != 'rgba(0,0,0,0)' -%} color: {{ block.settings.button_hover_color }} !important;
        {%- endif -%}
        }

        {%- endif -%}
        {%- endfor -%}
    </style>
{%- endif -%}

