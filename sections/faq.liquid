{%- if section.settings.enable -%}
    <div class="holder">
    <div class="container">
        {%- unless section.settings.title == '' and section.settings.subtitle == '' -%}
        {% case section.settings.title_size %}
        {% when 'h-lg-style' %}
        {%- assign title_size = 'title-lg' -%}
        {% when 'h1-style' %}
        {%- assign title_size = 'title-md' -%}
        {% else %}
        {%- assign title_size = 'title-sm' -%}
        {% endcase %}
        <div class="page-title title-wrap {{ title_size }} text-{{ section.settings.text_alignment }}">
            {%- if section.settings.title != '' -%}<h2 class="{{ section.settings.title_size }}{% if settings.heading_sub_first %} mb-0{% endif %}">{{ section.settings.title }}</h2>{%- endif -%}
            {%- if section.settings.subtitle != '' -%}<div class="h-sub maxW-825{% if settings.heading_sub_first %} h-sub--first{% endif %}">{{ section.settings.subtitle }}</div>{%- endif -%}
        </div>
        {%- endunless -%}
        <div class="row justify-content-center">
            <div class="col-lg-{{ section.settings.col_lg }} col-xl-{{ section.settings.col_xl }}">
                {%- if section.blocks.size > 0 -%}
                    <div class="faq-item-wrap{% unless section.settings.enable_border %} faq-item-wrap--noborder{% endunless %}">
                        {%- for block in section.blocks -%}
                            <div class="faq-item">
                                {%- if block.settings.title != '' -%}<h3 class="faq-item-title">{{ block.settings.title }}</h3>{%- endif -%}
                                {%- if block.settings.answer != '' -%}
                                    <div class="faq-item-content">
                                        {{ block.settings.answer }}
                                    </div>
                                {%- endif -%}
                            </div>
                        {%- endfor -%}
                    </div>
                {%- endif -%}
            </div>
        </div>
    </div>
</div>
{%- endif -%}

