<style>
    {%- assign swatchW = settings_swatches_width -%}
    .prd-block ul.color-list li.active img, .prd-block ul.color-list li:not(.absent-option):hover img {
        width: {{ swatchW | plus: 2 }}px;
        min-width: {{ swatchW | plus: 2 }}px;
        height: {{ swatchW | plus: 2 }}px;
    }
    .prd-block ul.color-list li a span.value {
        width: {{ swatchW }}px;
        max-width: {{ swatchW }}px;
        height: {{ swatchW }}px;
        -ms-flex: 0 0 {{ swatchW }}px;
        flex: 0 0 {{ swatchW }}px;
