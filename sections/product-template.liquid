<div class="holder" id="ProductSection-{{ section.id }}" {%- if section.settings.open_tab_mobile -%}data-open-mobile="true"{%- endif -%}
     data-section-id="{{ section.id }}"
     data-section-type="product"
     data-enable-history-state="true"
     data-ajax-enabled="{{ settings.enable_ajax }}">
    {%- assign previews = false -%}
    {%- for image in product.images -%} {%- if image.alt == "MAIN" or image.alt == "HOVER" or forloop.first -%} {% continue %} {%- endif -%} {% assign previews = true %} {% break %} {%- endfor -%}

    {%- assign column_media = 'col-md-8 col-lg-9 col-xl-10' -%}
    {%- assign column_info = 'col-md-10 col-lg-9 col-xl-8 mt-1 mt-md-0' -%}
    {%- if settings_gallery_width_yes -%}
        {%- assign column_media = 'col-md-8 col-lg-custom' -%}
        {%- assign column_info = 'col-md-10 col-lg-custom-rigth mt-1 mt-md-0' -%}
    {%- endif -%}
    {%- if product.images.size == 1 or previews == false -%}
        {%- assign column_media = 'col-md-6 col-lg-7' -%}
        {%- assign column_info = 'col-md-12 col-lg-11 mt-1 mt-md-0' -%}
        {%- if settings_gallery_width_yes -%}
            {%- assign column_media = 'col-md-6 col-lg-custom' -%}
            {%- assign column_info = 'col-md-12 col-lg-custom-rigth mt-1 mt-md-0' -%}
        {%- endif -%}
    {%- endif -%}

    <div class="container {% unless previews %}container-prd-block{% endunless %}" {% if settings_container_width_true %}style="max-width: {{ settings_container_width }}px!important"{% endif %}>
    <div class="row prd-block prd-block-under {% if settings_gallery_previews and product.images.size > 1 and previews %}{{ settings_gallery_previews_pos }}{% endif %}">
      {%- if settings_show_title_top -%}
      <div class="col">
        <div class="js-prd-d-holder">
          <div class="prd-block_title-wrap">
            {% include 'product-info-reviews' %}
            <h1 class="prd-block_title">{{ product.title  | strip_html }}</h1>
          </div>
        </div>
      </div>
      {%- endif -%}
      {%- if settings_show_title_top -%}
      <div class="col-md-8 prd-block-prevnext-wrap">
          {% render 'product_prev_next' with product as product, with collection as collection %}
      </div>
      {%- endif -%}
    </div>
    <div class="row prd-block {% if settings_gallery_previews and product.images.size > 1 %}{{ settings_gallery_previews_pos }}{% endif %}" {%- if section.settings.open_tab_mobile -%}data-open-mobile="true"{%- endif -%}>
      <div class="{{ column_media }} {% unless settings_gallery_previews_pos == 'grid' %}aside--sticky js-sticky-collision {% endunless %}">
        <div class="aside-content">
            {% include 'product-media' %}
        </div>
      </div>
        <div class="{{ column_info }}  {% if settings_gallery_previews_pos == 'grid' %}aside--sticky js-sticky-collision{% endif %}">
            <div {%- if settings_gallery_previews_pos == 'grid' -%}class="aside-content flex-column"{%- endif -%}>
                {% include 'product-info' with product as product  %}
                {%- if settings_tabs_position == 'inner' -%}
                    <div class="prd-block_info prd-block_info--style1">
                        {%- if settings_tabs_style == 'vertical' -%}
                            {% include 'product-tabs' %}
                        {%- else -%}
                            {% include 'product-tabs-horizontal' %}
                        {%- endif -%}
                    </div>
                {%- endif -%}
            </div>
        </div>
    </div>
  </div>
</div>
