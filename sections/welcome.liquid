{%- if section.settings.enable -%}
    <div class="holder holder-welcome-block {{ section.settings.outer_margin }}" {% if section.settings.block_bg != blank %}style="background-color: {{ section.settings.block_bg }}"{% endif %}>
        <div class="container">
            <div class="row welcome-block">
                <div class="col-lg-7 welcome-block-image">
                    {%- if section.settings.image != blank -%}
                        {%- assign img_url = section.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                        {%- assign aspect_ratio = 1 | divided_by: section.settings.image.aspect_ratio -%}
                        <div class="image-container w-100" style="padding-bottom: {{ aspect_ratio | times: 100 }}%">
                            <img class="lazyload fade-up-fast"
                                 data-expand="-100"
                                 data-src="{{ img_url }}"
                                 data-widths="[540, 720, 900]"
                                 data-sizes="auto"
                                 alt="{{ section.settings.image.alt | escape }}">
                        </div>
                    {%- else -%}
                        {% include 'image-placeholder' size: '640x620' %}
                    {%- endif -%}
                    {%- if section.settings.circle_yes -%}
                        <?xml version="1.0" encoding="utf-8"?> <svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 150 150" style="enable-background:new 0 0 150 150; width: 77%;mix-blend-mode:normal;{% if section.settings.circle_color !=blank %}fill:{{section.settings.circle_color}};{% endif %}" xml:space="preserve" class="circle_decor"> <defs> <filter x="0" y="0" width="100%" height="100%" id="dropshadow11" filterUnits="userSpaceOnUse"> <feGaussianBlur in="SourceAlpha" stdDeviation="2"/> <feOffset dx="-3" dy="0" result="offsetblur"/> <feMerge> <feMergeNode/> <feMergeNode in="SourceGraphic"/> <feMergeNode in="SourceGraphic"/> </feMerge> </filter> <filter x="0" y="0" width="100%" height="100%" id="dropshadow22" filterUnits="userSpaceOnUse"> <feGaussianBlur in="SourceAlpha" stdDeviation="2"/> <feOffset dx="3" dy="0" result="offsetblur"/> <feMerge> <feMergeNode/> <feMergeNode in="SourceGraphic"/> <feMergeNode in="SourceGraphic"/> </feMerge> </filter> <clipPath id="circle_decor_mask11"> <circle r="73.5" cx="75" cy="75"/> </clipPath> </defs> <path fill="#55C1AE" d="M74.933,148.5c-9.9,0-19.533-1.95-28.583-5.783c-8.75-3.699-16.6-9-23.333-15.734c-6.75-6.731-12.034-14.582-15.733-23.332C3.45,94.6,1.5,84.967,1.5,75.066c0-9.9,1.95-19.533,5.783-28.583c3.7-8.75,9-16.6,15.733-23.333S37.6,11.116,46.35,7.417c9.05-3.833,18.684-5.783,28.583-5.783c9.901,0,19.534,1.95,28.584,5.783c8.75,3.7,16.6,9,23.332,15.733c6.733,6.733,12.032,14.583,15.733,23.333c3.832,9.067,5.783,18.684,5.783,28.583c0,9.9-1.951,19.534-5.783,28.584c-3.701,8.75-9,16.6-15.733,23.332c-6.732,6.733-14.582,12.033-23.332,15.733C94.467,146.55,84.834,148.5,74.933,148.5z M75,13.783C41.25,13.783,13.783,41.25,13.783,75S41.25,136.217,75,136.217S136.217,108.75,136.217,75S108.75,13.783,75,13.783z"/> <circle r="5.8" cx="75" cy="7.8" fill-opacity="0.25" style="filter:url(#dropshadow11)" clip-path="url(#circle_decor_mask11)"/> <circle r="5.8" cx="74" cy="142.5" fill-opacity="0.25" style="filter:url(#dropshadow22)" clip-path="url(#circle_decor_mask11)"/> <path fill="#55C1AE" d="M81.101,7.712c0,3.346-2.761,6.059-6.164,6.059l0,0c-3.404,0-6.164-2.713-6.164-6.059l0,0c0-3.345,2.76-6.058,6.164-6.058l0,0C78.34,1.654,81.101,4.367,81.101,7.712L81.101,7.712z"/> <path fill="#55C1AE" d="M81.177,142.363c0,3.346-2.761,6.06-6.164,6.06l0,0c-3.404,0-6.164-2.714-6.164-6.06l0,0c0-3.345,2.76-6.058,6.164-6.058l0,0C78.416,136.306,81.177,139.019,81.177,142.363L81.177,142.363z"/></svg>
                    {%- endif -%}
                </div>
                <div class="col-lg-11 welcome-block-text-wrap">
                    <div class="welcome-block-text {{ section.settings.title_size }}" {% if section.settings.title_color != 'blank' %}style="color:{{ section.settings.title_color }};"{% endif %}>{{ section.settings.title }}</div>
                    <div class="welcome-block-info" {% if section.settings.text_color != 'blank' %}style="color:{{ section.settings.text_color }};"{% endif %}>
                        {{ section.settings.text }}
                        {%- if section.settings.button_yes -%}<p class="mt-3 mt-lg-5 welcome-block-btn"><a href="{% if section.settings.link != blank %}{{ section.settings.link }}{% else %}#{% endif %}" target="{{ section.settings.link_target }}" class="btn js-scroll-to-next-section" {% unless  section.settings.bnr_button_theme %}style="background-color:{{ section.settings.button_bgcolor }}; color:{{ section.settings.button_color }};" data-color="{{ section.settings.button_color }}" data-hover-color="{{ section.settings.button_color_hover }}" data-bgcolor="{{ section.settings.button_bgcolor }}" data-hover-bgcolor="{{ section.settings.button_bgcolor_hover }}"{% endunless %}>{{ section.settings.bnr_button_text }}</a></p>{%- endif -%}
                    </div>
                    {%- if section.settings.icon_yes -%}
                        <div class="welcome-block-icon" {% if section.settings.icon_color != blank and section.settings.icon_color != 'rgba(0,0,0,0)' %}style="color: {{ section.settings.icon_color }}"{% else %}{% if section.settings.icons_color != blank and section.settings.icons_color != 'rgba(0,0,0,0)' %}style="color: {{ section.settings.icons_color }}"{% endif %}{% endif %}>
                            {%- if section.settings.icon_type == 'svg' -%}
                                {{ section.settings.svg }}
                            {%- else -%}
                                <i class="{% if section.settings.icon_type == 'theme' %}{{ section.settings.icon }}{% else %}{{ section.settings.icon_name }}{% endif %}"></i>
                            {%- endif -%}
                        </div>
                    {%- endif -%}
                    {%- if section.settings.social_yes -%}
                        <div class="welcome-block-social">
                            <ul class="social-list-circle">
                                {%- render 'social-media-links' target: 'section' -%}
                            </ul>
                        </div>
                    {%- endif -%}
                </div>
                {%- if section.settings.button_yes -%}
                    <div class="welcome-block-btn">
                        <a href="{% if section.settings.link != blank %}{{ section.settings.link }}{% else %}#{% endif %}" target="{{ section.settings.link_target }}" class="btn js-scroll-to-next-section" {% unless  section.settings.bnr_button_theme %}style="background-color:{{ section.settings.button_bgcolor }}; color:{{ section.settings.button_color }};" data-color="{{ section.settings.button_color }}" data-hover-color="{{ section.settings.button_color_hover }}" data-bgcolor="{{ section.settings.button_bgcolor }}" data-hover-bgcolor="{{ section.settings.button_bgcolor_hover }}"{% endunless %}>{{ section.settings.bnr_button_text }}</a>
                    </div>
                {%- endif -%}
            </div>
        </div>
    </div>
{%- endif -%}

{% schema %}
{
"name": "Welcome Text",
"settings": [
{
"type": "checkbox",
"id": "enable",
"label": "Enable",
"default": true
},
{
"type": "select",
"id": "outer_margin",
"label": "Outer top margin",
"options":[
{"value":"mt-0","label":"None"},
{"value":"holder-mt-xsmall","label":"XSmall"},
{"value":"holder-mt-small","label":"Small"},
{"value":"holder-mt-medium","label":"Medium (default)"},
{"value":"holder-mt-large","label":"Large"}
],
"default": "mt-0"
},
{
"type":"color",
"id":"block_bg",
"label":"Background"
},
{
"type": "text",
"id": "title",
"label": "Title",
"default":"<i class='custom-color'>Hey!</i><br>Iâ€™m foxic"
},
{
"type": "select",
"id": "title_size",
"label": "Title Font Size",
"default": "welcome-block-text--lg",
"options": [
{ "value": "welcome-block-text--lg", "label": "XX Large" },
{ "value": "welcome-block-text--md", "label": "Extra Large" },
{ "value": "welcome-block-text--sm", "label": "Large" },
{ "value": "welcome-block-text--xs", "label": "Medium" },
{ "value": "welcome-block-text--xxs", "label": "Small" }
]
},
{
"type":"color",
"id":"title_color",
"label":"Title Color"
},
{
"type": "textarea",
"id": "text",
"label": "Text",
"default":"Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed laoreet sapien a ultrices semper. Sed faucibus placerat mi eu rhoncus. Aenean dictum nec augue vel molestie. Fusce ornare ullamcorper lacus, at egestas quam condimentum sed."
},
{
"type":"color",
"id":"text_color",
"label":"Text Color"
},
{
"type": "header",
"content": "Social Media Links"
},
{
"type": "checkbox",
"id": "social_yes",
"label": "Add social media links",
"default":true,
"info": "setup in General Settings / Social media"
},
{
"type": "header",
"content": "Button"
},
{
"type": "checkbox",
"id": "button_yes",
"label": "Add button",
"default":true
},
{
"type":"text",
"id":"bnr_button_text",
"label":"Text",
"default":"Start Shopping"
},
{
"type": "url",
"id": "link",
"label": "Link",
"info": "*if the link is empty, content will scroll to the next section on click"
},
{
"type": "select",
"id": "link_target",
"label": "Link Target",
"default":"_self",
"options": [
{ "value": "_blank", "label": "New page" },
{ "value": "_self",  "label": "In current page" }
]
},
{
"type": "checkbox",
"id": "bnr_button_theme",
"default": true,
"label": "Use Theme Button Color"
},
{
"type":"color",
"id": "button_color",
"label": "Color"
},
{
"type":"color",
"id": "button_bgcolor",
"label": "Bg Color"
},
{
"type":"color",
"id": "button_color_hover",
"label": "Hover Color"
},
{
"type":"color",
"id": "button_bgcolor_hover",
"label": "Hover Bg Color"
},
{
"type": "header",
"content": "Image"
},
{
"type": "image_picker",
"id": "image",
"label": "Image",
"info":"Recommended size 640x620px"
},
{
"type": "checkbox",
"id": "circle_yes",
"label": "Add Decor Circle",
"default":true
},
{
"type":"color",
"id":"circle_color",
"label":"Circle Color"
},
{
"type": "header",
"content": "Background Icon"
},
{
"type": "checkbox",
"id": "icon_yes",
"label": "Add Background Icon",
"default":true
},
{
"type": "radio",
"id": "icon_type",
"label": "Icon Source",
"options":[
{"value":"theme","label":"Section Icons Set (recommended)"},
{"value":"name","label":"Custom Icon Name (Theme Icons Library)"},
{"value":"svg","label":"Custom SVG code"}
]
},
{
"type": "select",
"id": "icon",
"label": "Section Icons Set",
"default": "icon-fox",
"options":[
{"value":"icon-fox","label":"Foxic"},
{"value":"icon-box-1","label":"Box"},
{"value":"icon-call-center","label":"Call Center"},
{"value":"icon-credit-card-1","label":"Credit Card"},
{"value":"icon-gift","label":"Gift"},
{"value":"icon-gift-card","label":"Gift Card"},
{"value":"icon-guarantee","label":"Guarantee"},
{"value":"icon-location","label":"Location"},
{"value":"icon-ribbon","label":"Ribbon"}
]
},
{
"type":"text",
"id":"icon_name",
"label":"Custom Icon Name",
"default": "icon-gift",
"info": "Select icon name here [Theme Icons Library](http://big-skins.com/frontend/foxic-html-demo/icon-foxic/demo.html)"
},
{
"type":"textarea",
"id":"svg",
"label":"Custom SVG code"
},
{
"type":"color",
"id":"icon_color",
"label":"Icon Color"
}
],
"presets": [{
"name": "Welcome Text",
"category": "Info Blocks"
}]
}
