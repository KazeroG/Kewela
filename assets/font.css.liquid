@font-face {
    font-family: "Font";
    src: url('{{ "font.eot" | asset_url }}');
    src: url('{{ "font.eot" | asset_url }} ?#iefix') format("embedded-opentype"),
    url('{{ "font.woff" | asset_url }}') format("woff"),
    url('{{ "font.ttf" | asset_url }}') format("truetype"),
    url('{{ "font.svg" | asset_url }} #myfont') format("svg");
}
